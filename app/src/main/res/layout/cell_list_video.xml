<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/cell_video_list_thumbnail"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_margin="16dp"/>

    <TextView
        android:id="@+id/cell_video_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Example"
        android:layout_alignTop="@+id/cell_video_list_thumbnail"
        android:layout_toRightOf="@+id/cell_video_list_thumbnail"
        android:layout_toEndOf="@+id/cell_video_list_thumbnail"
        style="?android:attr/textAppearanceListItem"/>
</RelativeLayout>